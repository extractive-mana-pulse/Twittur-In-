<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signInFragment">

<!--  home Fragment  -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.twitturin.ui.fragments.bottomNavigationView.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_privateMessagesFragment"
            app:destination="@id/privateMessagesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_publicPostFragment"
            app:destination="@id/publicPostFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>

<!--  privateMessagesFragment  -->
    <fragment
        android:id="@+id/privateMessagesFragment"
        android:name="com.example.twitturin.ui.fragments.bottomNavigationView.PrivateMessagesFragment"
        android:label="fragment_private_messages"
        tools:layout="@layout/fragment_private_messages" >
        <action
            android:id="@+id/action_privateMessagesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_privateMessagesFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

<!--  chatFragment  -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.twitturin.ui.fragments.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_privateMessagesFragment"
            app:destination="@id/privateMessagesFragment" />
    </fragment>

<!--  notificationsFragment  -->
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.twitturin.ui.fragments.bottomNavigationView.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_notificationsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

<!--  profileFragment  -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.twitturin.ui.fragments.topBarFragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileFragment_to_likesFragment"
            app:destination="@id/likesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_tweetsFragment"
            app:destination="@id/tweetsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true"/>
    </fragment>

<!--  publicPostFragment  -->
    <fragment
        android:id="@+id/publicPostFragment"
        android:name="com.example.twitturin.ui.fragments.PublicPostFragment"
        android:label="fragment_public_post"
        tools:layout="@layout/fragment_public_post" >
        <action
            android:id="@+id/action_publicPostFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/publicPostFragment"
            app:popUpToInclusive="true"/>
    </fragment>

<!--  searchFragment  -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.twitturin.ui.fragments.bottomNavigationView.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
    </fragment>

<!--  webViewFragment  -->
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.twitturin.ui.fragments.topBarFragments.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" >
        <action
            android:id="@+id/action_webViewFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

<!--  tweetsFragment  -->
    <fragment
        android:id="@+id/tweetsFragment"
        android:name="com.example.twitturin.ui.fragments.viewPagerFragments.TweetsFragment"
        android:label="fragment_tweets"
        tools:layout="@layout/fragment_tweets" >
        <action
            android:id="@+id/action_tweetsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

<!--  likesFragment  -->
    <fragment
        android:id="@+id/likesFragment"
        android:name="com.example.twitturin.ui.fragments.viewPagerFragments.LikesFragment"
        android:label="fragment_likes"
        tools:layout="@layout/fragment_likes" >
        <action
            android:id="@+id/action_likesFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

<!--  signInFragment  -->
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.twitturin.ui.fragments.loginFragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
    </fragment>

<!--  signUpFragment  -->
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.twitturin.ui.fragments.loginFragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"/>
    </fragment>

<!--  editProfileFragment  -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.twitturin.ui.fragments.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment"/>
    </fragment>

</navigation>