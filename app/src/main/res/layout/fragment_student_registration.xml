<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.presentation.registration.student.ui.StudentRegistrationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stud_reg_root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/student_toolbar"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                app:title="@string/registration"
                app:titleCentered="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:navigationIcon="@drawable/keyboard_backspace"/>

            <LinearLayout
                android:id="@+id/stud_reg_eds_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/custom_sign_in_ui"
                app:layout_constraintTop_toBottomOf="@id/student_toolbar">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_fullname_input_layout"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconCheckable="true"
                    app:endIconMode="clear_text"
                    app:startIconCheckable="true"
                    android:layout_marginTop="48dp"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/full_name"
                    android:background="@drawable/edit_text_bg2"
                    app:hintTextColor="?attr/colorOnPrimaryContainer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/full_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/full_name"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_username_input_layout"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconCheckable="true"
                    app:endIconMode="clear_text"
                    app:startIconCheckable="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/username_icon"
                    android:background="@drawable/edit_text_bg2"
                    app:hintTextColor="?attr/colorOnPrimaryContainer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="30"
                        android:inputType="text"
                        android:hint="@string/username"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_id_input_layout"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconCheckable="true"
                    app:endIconMode="clear_text"
                    app:startIconCheckable="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/id_icon"
                    android:background="@drawable/edit_text_bg2"
                    app:hintTextColor="?attr/colorOnPrimaryContainer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/student_id_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="7"
                        android:inputType="text"
                        android:hint="@string/student_id"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_major_input_layout"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/major"
                    android:gravity="center"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/edit_text_bg2"
                    app:hintTextColor="?attr/colorOnPrimaryContainer">

                    <Spinner
                        android:id="@+id/major_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:textAlignment="center"
                        android:background="@drawable/edit_text_bg2"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_password_input_layout"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconCheckable="true"
                    app:startIconCheckable="true"
                    android:layout_marginTop="15dp"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/lock"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/edit_text_bg2"
                    app:hintTextColor="?attr/colorOnPrimaryContainer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/student_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/student_sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/sign_up"
                android:visibility="invisible"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="?attr/textAppearanceButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>