<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.login.KindFragment">

    <ImageButton
        android:id="@+id/back_btn_kind"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/keyboard_backspace"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/kind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:text="What kind are you ?"
        android:textColor="?attr/colorPrimary"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/professor_kind_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Professor"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edit_text_bg_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kind_tv"/>

    <Button
        android:id="@+id/student_kind_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edit_text_bg_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/professor_kind_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>