<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/avatar"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/nav_full_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_avatar"/>

    <TextView
        android:id="@+id/nav_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_full_name_tv"/>

    <LinearLayout
        android:id="@+id/foll_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/nav_username_tv"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/nav_following_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/following_counter_tv"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/following_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/following"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/following_counter_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_description"/>

        <TextView
            android:id="@+id/nav_followers_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followers_counter_tv"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25sp"
            app:layout_constraintStart_toEndOf="@id/following_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_description" />

        <TextView
            android:id="@+id/followers_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followers"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/followers_counter_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_description"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/header_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_view_divider"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foll_info_layout"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>