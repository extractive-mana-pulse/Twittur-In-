<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_shimmer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/image_shimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/profile_kind_shimmer_tv"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="160dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_image_shimmer"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/profile_full_name_shimmer_tv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        android:background="@drawable/shimmer_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image_shimmer"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/profile_username_shimmer_tv"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shimmer_bg"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="3dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_full_name_shimmer_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/profile_biography_shimmer_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="16dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:text=""
        android:background="@drawable/shimmer_bg"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_username_shimmer_tv"/>

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_biography_shimmer_tv"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintStart_toEndOf="@id/location_img"
        app:layout_constraintTop_toBottomOf="@id/profile_biography_shimmer_tv"/>

    <LinearLayout
        android:id="@+id/foll_info_shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/location_tv"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/following_counter_shimmer_tv"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/shimmer_bg"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/following_shimmer_tv"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shimmer_bg"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/following_counter_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_biography"/>

        <TextView
            android:id="@+id/followers_counter_shimmer_tv"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/shimmer_bg"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20sp"
            app:layout_constraintStart_toEndOf="@id/following_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_biography" />

        <TextView
            android:id="@+id/followers_shimmer_tv"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shimmer_bg"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/followers_counter_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_biography"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>