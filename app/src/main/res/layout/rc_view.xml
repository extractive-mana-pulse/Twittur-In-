<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

<!--    Round this image    -->
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/cross"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elon Musk"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_avatar"/>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="post description will be illustrated here"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="3dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/user_nickname"
            app:layout_constraintStart_toEndOf="@id/user_avatar"/>

        <ImageView
            android:id="@+id/post_icon_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/comments"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/post_description"/>

        <TextView
            android:id="@+id/post_comments_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginStart="1.8dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_icon_comments"/>

        <ImageView
            android:id="@+id/post_icon_retweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retweet"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/post_comments_counter"
            app:layout_constraintTop_toBottomOf="@id/post_description"/>

        <TextView
            android:id="@+id/post_retweet_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:textAlignment="center"
            android:layout_marginStart="1.8dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_icon_retweet"/>

        <ImageView
            android:id="@+id/post_icon_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_retweet_counter"/>

        <TextView
            android:id="@+id/post_heart_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:layout_marginTop="17dp"
            android:layout_marginStart="1.8dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_icon_heart"/>

        <ImageView
            android:id="@+id/post_icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_heart_counter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>