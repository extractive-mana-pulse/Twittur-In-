<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rc_view_bg_ui"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

<!--    Round this image    -->
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="User Avatar Image"/>

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elon Musk"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_avatar"/>

            <TextView
                android:id="@+id/studentId_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@luminous_or_me"
                android:textSize="14sp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="3.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_nickname"/>

        <TextView
            android:id="@+id/post_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="post description will be illustrated here"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="3"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/user_nickname"/>

        <ImageView
            android:id="@+id/post_icon_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comments"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintTop_toBottomOf="@id/post_description"/>

        <TextView
            android:id="@+id/post_comments_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginStart="1.8dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_icon_comments"/>

        <ImageButton
            android:id="@+id/post_icon_retweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retweet"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_comments_counter"/>

        <TextView
            android:id="@+id/post_retweet_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:textAlignment="center"
            android:layout_marginStart="1.8dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_icon_retweet"/>

        <ImageButton
            android:id="@+id/post_icon_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_retweet_counter"/>

        <TextView
            android:id="@+id/post_heart_counter"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="1000"
            android:layout_marginTop="17dp"
            android:layout_marginStart="1.8dp"
            app:layout_constraintStart_toEndOf="@id/post_icon_heart"
            app:layout_constraintTop_toBottomOf="@id/post_description"/>

        <ImageButton
            android:id="@+id/post_icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/post_description"
            app:layout_constraintStart_toEndOf="@id/post_heart_counter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>