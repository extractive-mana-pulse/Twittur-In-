<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.presentation.fragments.ProfileFragment">

    <data>
        <variable
            name="profileFragment"
            type="com.example.twitturin.profile.presentation.fragments.ProfileFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_layout_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_header_layout"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:background="@drawable/header_layout_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="@{ () -> profileFragment.fragmentManager.popBackStack() }"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/keyboard_backspace"
                tools:ignore="ContentDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_page"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                android:id="@+id/share_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/share"
                android:background="@android:color/transparent"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@id/three_dot_menu"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/three_dot_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/more_vert_profile"
                android:background="@android:color/transparent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/profile_shimmer_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/profile_shimmer"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/profile_user_avatar"
            app:layout_constraintTop_toBottomOf="@id/profile_header_layout"/>

        <TextView
            android:id="@+id/profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_avatar"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_full_name" />

        <TextView
            android:id="@+id/profile_biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_username"/>

        <ImageView
            android:id="@+id/profile_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_biography"/>

        <TextView
            android:id="@+id/profile_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/profile_biography"
            app:layout_constraintStart_toEndOf="@id/profile_location_icon"/>

        <LinearLayout
            android:id="@+id/foll_info_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_location_tv">

            <TextView
                android:id="@+id/following_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/integer_string"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/following_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/following"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/profile_biography"
                app:layout_constraintStart_toEndOf="@id/following_counter_tv"/>

            <TextView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/followers_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/integer_string"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toEndOf="@id/following_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_biography"/>

            <TextView
                android:id="@+id/followers_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followers"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toBottomOf="@id/profile_biography"
                app:layout_constraintStart_toEndOf="@id/followers_counter_tv"/>

        </LinearLayout>

        <!--    Custom TabLayout    -->

        <!--    ViewPager2    -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tb"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foll_info_layout"
            app:tabBackground="@drawable/tab_bg"
            app:tabIndicatorAnimationMode="linear"
            app:tabIndicatorColor="?attr/colorPrimary"
            app:tabIndicatorHeight="4.5dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="?attr/colorOnSurface" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>