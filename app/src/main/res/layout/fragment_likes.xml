<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.viewPagerFragments.LikesFragment">

    <data>
        <variable
            name="likesFragment"
            type="com.example.twitturin.ui.fragments.viewPagerFragments.LikesFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/likes_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anView"
            android:layout_width="282dp"
            android:layout_height="282dp"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1.1"
            app:lottie_rawRes="@raw/empty_likes_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lottie_infoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Don't Have Liked Tweets"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="?attr/colorOnErrorContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>